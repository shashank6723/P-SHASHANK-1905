class Node:
  def __init__(self,data):
    self.data=data
    self.ref=None

class LinkedList:
  def __init__(self):
    self.head=None

  def print_LL(self):
    if self.head is None:
      print("Linked List is empty")
    else:
      n=self.head
      while n is not None:
        print(n.data, "-->",end="")
        n=n.ref

  def add_end(self, data) :
    new_node=Node(data)
    if self.head is None:
      self.head=new_node
    else:
      n=self.head
      while n.ref is not None:
        n=n.ref
      n.ref=new_node
    
  def getCount(self):
        temp = self.head
        count = 0
        
        while (temp):
          count += 1
          temp = temp.ref
        return count

LL1= LinkedList()
LL1.add_end(10)
LL1.add_end(20)
LL1.add_end(30)
LL1.add_end(15)
LL1.add_end(40)
LL1.print_LL()        
print()
print("Number of nodes are :", LL1.getCount())
